@model IEnumerable<DemoMegaDev.Models.Blog>

@{
    ViewData["Title"] = "Articles";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    int index = 0;
}

@section CSS {
    <link rel="stylesheet" type="text/css" href="~/css/articles.css" asp-append-version="true" />
}

    <h1>Articles</h1>

    <p>
        <a asp-action="Create">Create New</a>
    </p>

    <div class="row row-cols-3">
    @foreach (Blog item in Model)
    {
        index++;

        <div class="card col-sm-4 @(index % 3 == 0 ? "third" : null)">
            @if (null != item.Image)
            {
                <img src="@item.Image.File" class="card-img-top" alt="@item.Image.AltTitle">
            }
            else
            {
                <img src="~/Images/no-image-available.png" class="card-img-top" alt="no image available">
            }
            <div class="card-body">
                <h5 class="card-title">@Html.DisplayFor(modelItem => item.Headline)</h5>
                <p class="scheduled-date">@Html.DisplayFor(modelItem => item.ScheduleDate)</p>
                <p class="card-text">
                    @item.Excerpt
                </p>
            </div>
            <div class="card-footer text-lg-right">
                <a class="btn btn-outline-light" style="font-size: 1.5rem; border: 0;" href="Blogs/Details/@item.Id" role="button">&gt;</a>
            </div>
        </div>

        if(index % 3 == 0)
        {
            <div class="w-100 lane"></div>
        }
    }
